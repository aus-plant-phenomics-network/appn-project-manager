{
  "$defs": {
    "Extension": {
      "properties": {
        "components": {
          "items": {
            "anyOf": [
              {
                "maxItems": 2,
                "minItems": 2,
                "prefixItems": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "string"
                  }
                ],
                "type": "array"
              },
              {
                "$ref": "#/$defs/Field"
              },
              {
                "$ref": "#/$defs/Group"
              }
            ]
          },
          "title": "Components",
          "type": "array"
        },
        "sep": {
          "default": "_",
          "title": "Sep",
          "type": "string"
        },

        "default": {
          "anyOf": [
            {
              "additionalProperties": {
                "type": "string"
              },
              "type": "object"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Default"
        }
      },
      "required": [
        "components"
      ],
      "title": "Extension",
      "type": "object"
    },
    "Field": {
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "pattern": {
          "title": "Pattern",
          "type": "string"
        },
        "required": {
          "default": true,
          "title": "Required",
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "pattern"
      ],
      "title": "Field",
      "type": "object"
    },
    "File": {
      "additionalProperties": {
        "$ref": "#/$defs/Extension"
      },
      "type": "object"
    },
    "Group": {
      "properties": {
        "components": {
          "items": {
            "anyOf": [
              {
                "maxItems": 2,
                "minItems": 2,
                "prefixItems": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "string"
                  }
                ],
                "type": "array"
              },
              {
                "$ref": "#/$defs/Field"
              },
              {
                "$ref": "#/$defs/Group"
              }
            ]
          },
          "title": "Components",
          "type": "array"
        },
        "sep": {
          "default": "_",
          "title": "Sep",
          "type": "string"
        },
		"preprocess": {
		  "type": "object",
		  "properties": {
          "find": {
            "type": "string",
			"default": "",
            "description": "the string to find in an input filename"
          },
          "replace": {
            "type": "string",
			"default": "",
            "description": "The string to replace what is found"
          },
		  "casesensitive": {
            "type": "string",
			"default": "false",
            "description": "Should the match be case sensitive?"
          }
          },
          "required": ["find", "replace", "casesensitive"],
          "additionalProperties": false
		},
      },
      "required": [
        "components"
      ],
      "title": "Group",
      "type": "object"
    },
    "Layout": {
      "properties": {
        "structure": {
          "items": {
            "type": "string"
          },
          "title": "Structure",
          "type": "array"
        },
        "mapping": {
          "anyOf": [
            {
              "additionalProperties": {
                "additionalProperties": {
                  "type": "string"
                },
                "type": "object"
              },
              "type": "object"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Mapping"
        },
		"date_convert": {
			
		  "type": "object",
		  "properties": {
          "base_timezone": {
            "type": "string",
            "description": "The base timezone, e.g., 'UTC'"
          },
          "output_timezone": {
            "type": "string",
            "description": "The output timezone, e.g., 'Australia/Adelaide'"
          },
		  "input_format": {
            "type": "string",
            "description": "The output date format using %Y %m %d %H %M %S components'"
          },
		  "output_format": {
            "type": "string",
            "description": "The output date format using %Y %m %d  components'"
          }
          },
          "required": ["base_timezone", "output_timezone"],
          "additionalProperties": false
		},
      },
      "required": [
        "structure",
		"date_convert"
      ],
      "title": "Layout",
      "type": "object"
    },
    "NamingConv": {
      "properties": {
        "sep": {
          "default": "_",
          "title": "Sep",
          "type": "string"
        },

        "structure": {
          "default": [
            "year",
            "summary",
            "internal",
            "researcherName",
            "organisationName"
          ],
          "items": {
            "type": "string"
          },
          "title": "Structure",
          "type": "array"
        }
      },
      "title": "NamingConv",
      "type": "object"
    }
  },
  "properties": {
    "layout": {
      "anyOf": [
        {
          "$ref": "#/$defs/Layout"
        },
        {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      ],
      "title": "Layout"
    },
    "file": {
      "$ref": "#/$defs/File"
    },
    "naming_convention": {
      "$ref": "#/$defs/NamingConv",
      "default": {
        "sep": "_",
        "structure": [
          "year",
          "summary",
          "internal",
          "researcherName",
          "organisationName"
        ]
      }
    },
    "version": {
      "default": "0.1.0",
      "title": "Version",
      "type": "string"
    }
  },
  "required": [
    "layout",
    "file"
  ],
  "title": "Template",
  "type": "object"
}
